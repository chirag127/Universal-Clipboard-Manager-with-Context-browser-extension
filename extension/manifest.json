{
  "manifest_version": 3,
  "name": "ClipContext - Universal Clipboard Manager",
  "version": "1.0.0",
  "description": "A clipboard manager that captures copied items with context and uses AI to categorize them",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.svg",
      "48": "assets/icons/icon48.svg",
      "128": "assets/icons/icon128.svg"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.svg",
    "48": "assets/icons/icon48.svg",
    "128": "assets/icons/icon128.svg"
  },
  "options_page": "options/options.html"
}